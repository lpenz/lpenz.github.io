
import os
import glob

Import(['env'])

if False:
    env.Command('dists/lpenz/main/binary-i386/Packages.bz2',  glob.glob('packages/*.deb'), '(set -e; cd debian; dpkg-scanpackages packages | bzip2 -9c) > ${TARGET.file}.tmp && mv ${TARGET.file}.tmp ${TARGET}')
    env.Command('dists/lpenz/main/source/Sources.bz2',        glob.glob('packages/*.dsc'), '(set -e; cd debian; dpkg-scansources  packages | bzip2 -9c) > ${TARGET.file}.tmp && mv ${TARGET.file}.tmp ${TARGET}')
    #env.Command('Contents.gz',  glob.glob('incoming/*.deb'), 'apt-ftparchive contents . | gzip -9c > ${TARGET.file}.tmp && mv ${TARGET.file}.tmp ${TARGET.file}', chdir=1)
    env.Command('dists/lpenz/Release',   ['dists/lpenz/main/binary-i386/Packages.gz', 'dists/lpenz/main/source/Sources.gz'], '(set -e; apt-ftparchive -o APT::FTPArchive::Release::Label=lpenz release .) > ${TARGET.file}.tmp && mv ${TARGET.file}.tmp ${TARGET}')
    env.Command('dists/lpenz/Release.gpg', 'dists/lpenz/main/source/Release', 'gpg --output ${TARGET} -ba ${SOURCE}')

indexbuild = env.File('indexbuild')
env.Command('index.t2t', ['lpenz.list']+env.Glob('packages/*.changes'), indexbuild.abspath + ' ${TARGET} ${SOURCES}')
env.Depends('index.t2t', indexbuild)

env.MAKO('index.t2t', MAKOFLAGS='-t base')

