
import os

Import(['env'])

env.Command('sharedexpenses.lhs', 'index.t2t', 'cp $SOURCE $TARGET')
env.HASKELL('sharedexpenses.lhs', HASKELLFLAGS = '--make -cpp -fglasgow-exts -Werror -Wall -fno-warn-missing-signatures')
env.Command('results.txt', 'sharedexpenses', '$SOURCE > $TARGET')

env.MAKO('index.t2t', MAKOFLAGS = '-t base')

